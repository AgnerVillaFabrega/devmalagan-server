# Configuración básica
GENERIC_TIMEZONE=America/Bogota
NODE_ENV=production

# Si expones n8n a internet a través de NPM
# WEBHOOK_URL=https://n8n.tudominio.com/
# N8N_HOST=n8n.tudominio.com
# N8N_PROTOCOL=https

# Para uso local
WEBHOOK_URL=http://localhost:5678/
N8N_HOST=localhost
N8N_PROTOCOL=http

# Autenticación básica (descomenta para activar)
# N8N_BASIC_AUTH_ACTIVE=true
# N8N_BASIC_AUTH_USER=admin
# N8N_BASIC_AUTH_PASSWORD=cambia_este_password

# Base de datos PostgreSQL (descomenta si la usas)
# DB_TYPE=postgresdb
# DB_POSTGRESDB_DATABASE=n8n
# DB_POSTGRESDB_HOST=postgres
# DB_POSTGRESDB_PORT=5432
# DB_POSTGRESDB_USER=n8n
# DB_POSTGRESDB_PASSWORD=n8n_password_seguro

# Configuración de ejecuciones
EXECUTIONS_DATA_PRUNE=true
EXECUTIONS_DATA_MAX_AGE=168

# Encriptación (genera una clave aleatoria)
# N8N_ENCRYPTION_KEY=genera_una_clave_aleatoria_aqui